{
    "name": "mintreu/laravel-category",
    "description": "Manage Category Accross Your Laravel Project",
    "keywords": [
        "mintreu",
        "laravel",
        "laravel-category"
    ],
    "homepage": "https://github.com/mintreu/laravel-category",
    "support": {
        "issues": "https://github.com/mintreu/laravel-category/issues",
        "source": "https://github.com/mintreu/laravel-category"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Krishanu",
            "email": "36711704+krishzzi@users.noreply.github.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.2",
        "filament/filament": "^3.0",
        "spatie/laravel-package-tools": "^1.15.0",
        "staudenmeir/laravel-adjacency-list": "^1.25",
        "codewithdennis/filament-select-tree": "^3.1",
        "filament/spatie-laravel-media-library-plugin": "^3.3",
        "mintreu/toolkit": "dev-main"
    },
    "require-dev": {
        "laravel/pint": "^1.0",
        "nunomaduro/collision": "^7.9",
        "nunomaduro/larastan": "^2.0.1",
        "orchestra/testbench": "^8.0",
        "pestphp/pest": "^2.1",
        "pestphp/pest-plugin-arch": "^2.0",
        "pestphp/pest-plugin-laravel": "^2.0",
        "phpstan/extension-installer": "^1.1",
        "phpstan/phpstan-deprecation-rules": "^1.0",
        "phpstan/phpstan-phpunit": "^1.0",
        "spatie/laravel-ray": "^1.26"
    },
    "autoload": {
        "psr-4": {
            "Mintreu\\LaravelCategory\\": "src/",
            "Mintreu\\LaravelCategory\\Database\\Factories\\": "database/factories/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Mintreu\\LaravelCategory\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": "@php ./vendor/bin/testbench package:discover --ansi",
        "analyse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Mintreu\\LaravelCategory\\LaravelCategoryServiceProvider"
            ],
            "aliases": {
                "LaravelCategory": "Mintreu\\LaravelCategory\\Facades\\LaravelCategory"
            }
        }
    },
    "repositories": [
        {
            "type": "path",
            "url": "../toolkit",
            "options": {
                "symlink": true
            }
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true
}
